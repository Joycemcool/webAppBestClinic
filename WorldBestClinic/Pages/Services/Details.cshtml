@page
@model WorldBestClinic.Pages.Services.DetailsModel

@{
    ViewData["Title"] = "Details";
    string imagePath = "/ServicePhotos/" + Model.Service.FileName;
}

<h1>Details</h1>


<div>
    <h4>Service</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <img src="@imagePath" class="img-fluid" />
        </div>

        <dl class="col-md-6">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Service.ServiceName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Service.ServiceName)
            </dd>

            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Service.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Service.Price)
            </dd>

            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Service.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Service.Description)
            </dd>

            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Service.IsLab)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Service.IsLab)
            </dd>

            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Service.FileName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Service.FileName)
            </dd>

        </dl>
    </div>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Service?.ServiceId" class="btn btn-primary">Edit</a> |
    <a asp-page="./Index" class="btn btn-outline-dark">Back to List</a>
</div>
