@page
@model WorldBestClinic.Pages.Services.EditModel

@{
    ViewData["Title"] = "Edit";
    string imagePath = "/ServicePhotos/" + Model.Service.FileName;

}

<h1>Edit Service</h1>

<hr />

<br />

<h4>Service</h4>
<hr />

<div class="row">

    <div class="col-md-6">
        <img src="@imagePath" class="img-fluid" />
    </div>

    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Service.FileName" class="form-control" />
            <input type="hidden" asp-for="Service.ServiceId" />
            <input type="hidden" asp-for="Service.FileName" class="form-control" />


            <div class="mb-3">
                <label for="ImageUpload">Upload New Service Picture</label>
                <input type="file" asp-for="ImageUpload" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Service.ServiceName" class="control-label"></label>
                <input asp-for="Service.ServiceName" class="form-control" />
                <span asp-validation-for="Service.ServiceName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Service.Price" class="control-label"></label>
                <input asp-for="Service.Price" class="form-control" />
                <span asp-validation-for="Service.Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Service.Description" class="control-label"></label>
                <input asp-for="Service.Description" class="form-control" />
                <span asp-validation-for="Service.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Service.IsLab" class="control-label"></label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="isLabYes" name="Service.IsLab" value="true" asp-for="Service.IsLab" />
                    <label class="form-check-label" for="isLabYes">Yes</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="isLabNo" name="Service.IsLab" value="false" asp-for="Service.IsLab" />
                    <label class="form-check-label" for="isLabNo">No</label>
            </div>

           </div>

            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-outline-dark">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
